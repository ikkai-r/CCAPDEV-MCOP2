
<div class="container d-flex content-container mt-4">
<!-- All Posts Container -->
<div class="post-creator">
    <div class="post-creator-delete"><a href="index.html"><i class="fa-regular fa-trash-can"></i></a></div>
    <textarea class="post-creator-title" rows="1" placeholder="type your title here"></textarea>
    <p class="post-creator-posted-by">posted by helpvirus on <span id="date"></span></p>
    <div class="textarea post-creator-description" contenteditable="true" placeholder="Enter your description here" oninput="if(this.innerHTML.trim()==='<br>')this.innerHTML=''"></div>
    <div id="add-tag-area" class="post-creator-add-tag" contenteditable="true" placeholder="#add your tags here" oninput="if(this.innerHTML.trim()==='<br>')this.innerHTML=''"></div>
    <div class="d-flex" id="tag-grp"></div>
    <div class="post-creator-buttons mt-3">
        <a href="home">
            <button class="pill post-creator-cancel">cancel</button>
        </a>
        <a href="home">
            <button class="pill post-creator-post">post</button>
        </a>
    </div>
</div>

{{> side-container}}