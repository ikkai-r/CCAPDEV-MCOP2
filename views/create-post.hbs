
<div class="container d-flex content-container mt-4">
<!-- All Posts Container -->
<div class="post-creator">
    <form id="create-post-form">
    <div class="post-creator-delete"><a href="/"><i class="fa-regular fa-trash-can"></i></a></div>
    <textarea class="post-creator-title" rows="1" placeholder="type your title here" name="post_title" required></textarea>
    <p class="post-creator-posted-by">posted by helpvirus on <span id="date" name="date"></span></p>
    
    <!-- Creating a post with attachments -->
    <div class="post-creator-content">
        <!-- Text area -->
        <textarea name="post_content" class="textarea post-creator-description" contenteditable="true" placeholder="Enter your description here" oninput="if(this.innerHTML.trim()==='<br>')this.innerHTML=''" style="height: 300px; max-height:300px; overflow-x: auto"></textarea>
        <!-- Icon to attach files in creating a post -->
        <div class="post-creator-attach" style="height: 300px;">
            <!-- File upload -->
            <input type="file" id="file" name="post_attachment" style="display:none;" accept="image/*">
            <!-- File upload label -->
            <label for="file" class="fa-solid fa-paperclip"></label>
           
        </div>
    </div>

    <!-- Attachment Container -->
    <div class="d-flex attachment-container" id="attachment-container"></div>
     <input type="hidden" value="post-act" name="action">
    
    <div id="add-tag-area" class="post-creator-add-tag" contenteditable="true" placeholder="#add your tags here" oninput="if(this.innerHTML.trim()==='<br>')this.innerHTML=''"></div>
    
    <div class="d-flex" id="tag-grp" name="tag_groups"></div>
    
    <div class="post-creator-buttons mt-3">
        <a href="home">
            <button class="pill post-creator-cancel">cancel</button>
        </a>
            <button class="pill post-creator-post" type="submit" id="create-post-btn">post</button>
    </div>
    </form>
</div>

{{> side-container}}