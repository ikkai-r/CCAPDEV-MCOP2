<!-- Tags page -->
<div class="container mt-4 pt-3" id="tags">
    <div class="view-tag-header">
        <h1 class="header-text">#{{tag_name}}</h1>
        <div class="tag-post-hder">
            <div class="tag-post-hd" onclick="tagSub()">
                <h5 id="subs">Subscribe</h5>
            </div>
            <div class="tag-post-hd">
                <h5><b>{{post_cnt}}</b> post/s  | <b>TODO</b> subscribers</h5>
            </div>
        </div>
    </div>

    <!-- Posts -->
    <div class="tag-group-row">
        {{#each post}}
        {{> tag-post-prev}}
        {{/each}}
    </div> <!-- End of 1st row -->
</div> <!-- End of Tags Page -->

    <script>
    function tagSub() {
        
        if( document.getElementById("subs").innerHTML == "Subscribe") {
            document.getElementById("subs").innerHTML = "Unsubscribe";
        } else {
            document.getElementById("subs").innerHTML = "Subscribe";
        }
    }
</script>