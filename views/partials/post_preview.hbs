<!-- Post Container -->
<div class="row post"> 

    <!-- Profile Picture -->
    <div class="col-1">
        <img src={{{profile_pic}}} class="profile-pic">
    </div>

    <!-- Post Proper -->
    <div class="col-11">
        <h5 class="post-title"><b><a href="{{post_id}}">{{{post_title}}}</a></b></h5>
        <span class="post-info">posted by <a href="user/{{{username}}}">{{{username}}}</a> on {{{post_date}}}</span>
        <p class="post-content pt-2">{{{post_content}}}</p>
        <div class="d-flex justify-content-between">
            <div class="d-flex">
                {{#each tags}}
                <a href="tag/{{this}}" class="postcom-tags post-tags-cont">{{this}}</a>
                {{/each}}
            </div>
            <div class="actions-cont d-flex">
                <div class="share-cont" onclick="copyLink('view-post.html');">
                    <i class="fa-regular fa-share-from-square"></i>
                </div>
                <div class="votes-cont" data-bs-toggle="modal" data-bs-target="#loginModal">
                    <i class="fa-regular fa-circle-up"></i>
                <span style="font-size:smaller; margin-right: 0.5vh;"><b>{{{upvotes}}}</b></span>
                    <span style="font-size:smaller; margin-right: 0.5vh;"><b>|</b></span>
                    <i class="fa-regular fa-circle-down"></i>
                    <span style="font-size:smaller"><b>{{{downvotes}}}</b></span>
                </div>
                <div class="comments-cont" onclick="redirectToPage('view-post.html')">
                    <i class="fa-regular fa-comment-dots"></i>
                    <span style="font-size:smaller"><b>{{{comments_cont}}}</b></span>
                </div>
            </div>
        </div>
    </div>
</div> <!-- End of a post -->