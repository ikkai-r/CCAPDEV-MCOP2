<div class="viewed-post-container mb-4">
                    <h2>{{post_title}}</h2> 
                    
                    <div class="d-flex">
                        {{#if post_date_modified.length}}
                        <!-- Indicate if post is edited -->
                        <p class="post-creator-posted-by">posted by <a href="/user/{{username.username}}">{{username.username}}</a> on {{post_date_modified}}</p>
                        <p class="edited-tag-post" id="edited-tag-post">(edited)</p>
                        {{else}}
                        <p class="post-creator-posted-by">posted by <a href="/user/{{username.username}}">{{username.username}}</a> on {{post_date}}</p>
                        {{/if}}
                    </div>
                
                    <p>
                       {{post_content}}
                       {{#if post_attachment.length}}
                        <div style="display: flex; justify-content: center;" class="mb-4">
                            <img src="img/{{post_attachment}}" class="viewed-post-img">
                        </div>
                       {{/if}}
                    </p>
                    <div class="d-flex">
                        {{#each tags_post}}
                        <a href="/tag/{{tag_name}}" class="postcom-tags post-tags-cont">#{{tag_name}}</a>
                        {{/each}}
                    </div>

                    <div class="actions-cont viewed-post-actions mb-3 mt-3">
                        <div class="share-cont" id="share-btn" onclick="copyLink('post/{{_id}}')">
                            <i class="fa-regular fa-share-from-square"></i>
                        </div>
                        <div class="votes-cont">
                            <i class="fa-regular fa-circle-up" id="upvote-btn"></i>
                            <span style="fontWeight:bold; font-size:smaller; margin-right: 0.5vh;" id="upvote-amnt"><b>3</b></span>
                            <span style="font-size:smaller; margin-right: 0.5vh;"><b>|</b></span>
                            <i class="fa-regular fa-circle-down" id="downvote-btn"></i>
                            <span style="fontWeight:bold; font-size:smaller" id="downvote-amnt"><b>0</b></span>
                        </div>
                        <div class="comments-cont">
                            <i class="fa-regular fa-comment-dots"></i>
                            <span style="font-size:smaller" id="comment-amnt"><b>0</b></span>
                        </div>
                    </div>
                </div>